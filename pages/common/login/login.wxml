<cu-custom bgColor="bg-gradual-blue" isBack="{{true}}">
  <view slot="content">登录</view>
</cu-custom>

<view class='container'>


  <image class="bg" src="/static/img/bg.png"></image>
  <image class="logo z-index" src="/static/img/logo.png"></image>
  <form class="form z-index">
    <view class='item'>
      <text class="iconfont icon-hezuohuobanmiyueguanli"></text>
      <input placeholder="请输入姓名" bindinput="nameInput"></input>
    </view>
    <view class='item'>
      <text class="iconfont icon-zhanghaoquanxianguanli"></text>
      <input placeholder="请输入学号/教工号" bindinput="numberInput"></input>
    </view>
  </form>
  <view class="login z-index">
    <button class="cu-btn lg shadow bg-gradual-blue" bindtap="login">登录</button>
  </view>
  <view class="reg z-index" bindtap="toSelect">
    <text class="text-blue">还没有账号 点击注册</text>
  </view>
</view>


<view class="cu-modal {{modalName=='error'?'show':''}}">
  <view class="cu-dialog">
    <view class="cu-bar bg-white justify-end">
      <view class="content">提示</view>
      <view class="action" bindtap="hideModal">
        <text class="cuIcon-close text-blue"></text>
      </view>
    </view>
    <view class="padding-xl">
      登录失败 请检查登录信息
    </view>
  </view>
</view>
