.select {
  height: 100vh;
  width: 100vw;
}

.select > .confirm {
  width: 100%;
  text-align: center;
}

.select > .confirm button {
  width: 85%;
}

.selectList {
  margin: 3rem 0;
  display: flex;
}

.selectList .item {
  flex: 1;
  height: 55vh;
  width: 50vw;
  display: flex;
  align-items: center;
  justify-content: center
}

image {
  height: 35vh;
  width: 35vw;
  padding: 2rem 1rem;
  border: 2px dashed #aaaaaa;
  border-radius: 8%;
  text-align: center;
}

.active image {
  background-color: #FEEFEF;
  border: 2px dashed #F2CFCF;
}
