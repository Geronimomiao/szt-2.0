<view class='select'>

<cu-custom bgColor="bg-gradual-blue" isBack="{{true}}">
  <view slot="content">选择身份</view>
</cu-custom>

  <view class="tower-swiper" bindtouchmove="towerMove" bindtouchstart="towerStart" bindtouchend="towerEnd">
    <view class="tower-item" wx:for="{{swiperList}}" wx:key style="--index:{{item.zIndex}};--left:{{item.mLeft}}">
      <view class="swiper-item">
        <image src="{{item.url}}"></image>
      </view>
    </view>
  </view>

  <view class="confirm" bindtap="confirm">
    <button class="cu-btn lg shadow bg-gradual-blue">确认身份</button>
  </view>
  
</view>